{
  "manifest_version": 2,
  "name": "TailSearch",
  "version": "1.0",
  "description": "Chrome extension to search Google with an appended text string to the current selection.",
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "TailSearch",
    "default_icon": {
      "16": "assets/favicon-16x16.png",
      "32": "assets/favicon-32x32.png",
      "48": "assets/favicon-48x48.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content-script.js"]
    }
  ],
  "icons": {
    "16": "assets/favicon-16x16.png",
    "32": "assets/favicon-32x32.png",
    "48": "assets/favicon-48x48.png"
  },
  "options_page": "options.html",
  "permissions": ["contextMenus", "storage", "tabs", "activeTab", "https://*/*", "http://*/*"],
  "content_security_policy": "script-src 'self'; object-src 'self';",
  "web_accessible_resources": ["assets/*"],
  "applications": {
    "gecko": {
      "id": "tailsearch@example.com",
      "strict_min_version": "109.0"
    }
  }
}
