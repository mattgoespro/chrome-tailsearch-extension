{
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "module": "commonjs",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "lib": ["dom", "es2022"],
    "outDir": "dist",
    "target": "es6",
    "types": ["node", "react", "chrome"],
    "paths": {
      "@shared/*": ["src/shared/*"]
    },
    "allowJs": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
