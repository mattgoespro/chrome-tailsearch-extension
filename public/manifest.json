{
  "$schema": "https://raw.githubusercontent.com/SchemaStore/schemastore/f46a56f2c27c325336b68130c88263a400808c61/src/schemas/json/chrome-manifest.json",
  "manifest_version": 3,
  "name": "Tailsearch",
  "version": "1.0",
  "description": "Chrome extension to search Google with an appended text string to the current selection.",
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_title": "Tailsearch",
    "default_icon": {
      "16": "assets/favicon-16x16.png",
      "32": "assets/favicon-32x32.png",
      "48": "assets/favicon-48x48.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content-script.js"]
    }
  ],
  "icons": {
    "16": "assets/favicon-16x16.png",
    "32": "assets/favicon-32x32.png",
    "48": "assets/favicon-48x48.png"
  },
  "options_page": "settings.html",
  "permissions": ["contextMenus", "scripting", "storage", "tabs", "activeTab"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
